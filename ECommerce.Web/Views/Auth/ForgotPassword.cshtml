@model ECommerce.Web.Models.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Şifremi Unuttum";
}

@section Styles {
    <link rel="stylesheet" href="~/css/forgotpassword.css" asp-append-version="true" />
}

<div class="forgot-password-container">
    <div class="forgot-password-card">
        <div class="forgot-password-header">
            <div class="icon-wrapper">
                <i class="bi bi-key"></i>
            </div>
            <h2 class="forgot-password-title">Şifrenizi mi Unuttunuz?</h2>
            <p class="forgot-password-subtitle">
                E-posta adresinizi girin, size şifre sıfırlama bağlantısı gönderelim
            </p>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert-success">
                <i class="bi bi-check-circle"></i>
                <span>@TempData["SuccessMessage"]</span>
            </div>
        }

        <form asp-controller="auth" asp-action="forgotpassword" method="post">
            <div asp-validation-summary="ModelOnly" class="alert-danger"></div>

            <div class="form-group">
                <label class="form-label" asp-for="Email">
                    <i class="bi bi-envelope"></i>
                    E-posta Adresi
                </label>
                <input asp-for="Email" 
                       class="form-control" 
                       placeholder="ornek@email.com" 
                       autofocus />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-submit">
                <i class="bi bi-send"></i>
                Sıfırlama Bağlantısı Gönder
            </button>
        </form>

        <div class="forgot-password-footer">
            <p>
                <i class="bi bi-arrow-left"></i>
                <a asp-controller="auth" asp-action="login">Giriş sayfasına dön</a>
            </p>
            <p style="margin-top: 1rem;">
                Hesabınız yok mu? 
                <a asp-controller="auth" asp-action="register">Kayıt olun</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
