@{
    ViewData["Title"] = "Ana Sayfa";
}

<style>
    .hero-section {
        background: linear-gradient(135deg, #1f1f1f 0%, #252525 100%);
        padding: 4rem 2rem;
        text-align: center;
        border-radius: 8px;
        margin-bottom: 3rem;
        border: 1px solid var(--border-gray);
    }

    .hero-logo {
        width: 200px;
        height: 200px;
        margin: 0 auto 2rem;
        background-color: var(--bg-white);
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5);
    }

    .hero-logo i {
        font-size: 6rem;
        color: var(--accent-orange);
    }

    .hero-title {
        font-size: 2.5rem;
        font-weight: 700;
        color: var(--text-dark);
        margin-bottom: 1rem;
    }

    .hero-subtitle {
        font-size: 1.125rem;
        color: var(--text-gray);
        max-width: 600px;
        margin: 0 auto 2rem;
    }

    .hero-cta {
        display: inline-block;
        background-color: var(--accent-orange);
        color: white;
        padding: 1rem 2.5rem;
        border-radius: 4px;
        text-decoration: none;
        font-weight: 600;
        transition: background-color 0.15s ease;
        border: none;
        cursor: pointer;
    }

    .hero-cta:hover {
        background-color: var(--accent-orange-hover);
        color: white;
    }

    .categories-section {
        margin-bottom: 3rem;
    }

    .section-title {
        font-size: 1.75rem;
        font-weight: 700;
        color: var(--text-dark);
        margin-bottom: 1.5rem;
    }

    .category-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
    }

    .category-card {
        background: var(--bg-white);
        border-radius: 8px;
        padding: 2rem;
        text-align: center;
        transition: all 0.2s ease;
        border: 1px solid var(--border-gray);
        text-decoration: none;
        color: var(--text-dark);
    }

    .category-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 24px rgba(255, 153, 0, 0.2);
        border-color: var(--accent-orange);
    }

    .category-icon {
        width: 80px;
        height: 80px;
        margin: 0 auto 1rem;
        background-color: #252525;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .category-icon i {
        font-size: 2.5rem;
        color: var(--accent-orange);
    }

    .category-name {
        font-size: 1.125rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
        color: var(--text-dark);
    }

    .category-count {
        font-size: 0.875rem;
        color: var(--text-gray);
    }

    .features-section {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 2rem;
        margin-top: 3rem;
        padding: 3rem 0;
        border-top: 1px solid var(--border-gray);
    }

    .feature-item {
        text-align: center;
    }

    .feature-icon {
        width: 60px;
        height: 60px;
        margin: 0 auto 1rem;
        background-color: #252525;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .feature-icon i {
        font-size: 1.75rem;
        color: var(--accent-orange);
    }

    .feature-title {
        font-size: 1rem;
        font-weight: 600;
        color: var(--text-dark);
        margin-bottom: 0.5rem;
    }

    .feature-desc {
        font-size: 0.875rem;
        color: var(--text-gray);
    }
</style>

<div class="hero-section">
    <div class="hero-logo">
